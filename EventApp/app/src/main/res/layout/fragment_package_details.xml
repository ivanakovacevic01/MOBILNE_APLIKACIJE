<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/page_background"
    android:layout_height="match_parent"
    android:id="@+id/pack">

    <ScrollView
        android:background="@color/page_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:background="@color/page_background"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="5dp"

        android:layout_marginLeft="2dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:backgroundTint="@color/page_background"

            android:textColor="@color/view_green"
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_marginBottom="10dp"
            android:text="Package information"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="30sp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:text="Name"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/packageName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                >
            </TextView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42.5dp"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="90dp"
                android:layout_height="42.5dp"
                android:layout_marginLeft="10dp"
                android:text="Description"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/packageDescription"
                android:layout_width="match_parent"
                android:layout_height="42.5dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                >
            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:text="Category"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/packageCategory"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                >
            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:text="Event type"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/packageEventType"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                >
            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:text="Price"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/packagePrice"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                >
            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:text="Discount"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/packageDiscount"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                >
            </TextView>
            <TextView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="Discount price"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/packageDiscountPrice"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                >
            </TextView>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:text="Available"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/packageAvailable"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                >
            </TextView>
            <TextView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="Visible"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/packageVisible"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                >
            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:text="Reservation deadline"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/packageReservationDeadline"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                >
            </TextView>
            <TextView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="Cancellation deadline"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/packageCancelationDeadline"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                >
            </TextView>

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="95dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:text="Products:"
                android:textStyle="bold" />
            <ListView
                tools:listitem="@layout/product_card_for_package"

                android:id="@+id/listPackages"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                </ListView>



        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="15dp"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="95dp"
                android:layout_height="90dp"
                android:layout_marginLeft="10dp"
                android:text="Services:"
                android:textStyle="bold" />
            <ListView

                tools:listitem="@layout/product_card_for_package"
                android:id="@+id/listServices"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></ListView>



        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            >
            <Button
                android:backgroundTint="@color/view_green"
                android:id="@+id/btnEdit"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:text="Edit"/>
            <Button
                android:backgroundTint="@color/view_green"
                android:id="@+id/btnDelete"
                android:layout_alignParentRight="true"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:text="Delete"/>

        </RelativeLayout>

        <Button
            android:id="@+id/btnCompanyInfo"
            android:layout_width="380dp"
            android:layout_marginLeft="10dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/view_green"
            android:text="@string/company_info" />
        <Button
            android:id="@+id/btnMessage"
            android:layout_width="380dp"
            android:layout_marginLeft="10dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/view_green"
            android:text="@string/send_message"/>
        <Button
            android:id="@+id/btnFavourite"
            android:layout_width="380dp"
            android:layout_marginLeft="10dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/view_green"
            android:text="@string/add_to_favourites"/>
        <Button
            android:id="@+id/btnChooseEvent"
            android:layout_width="380dp"
            android:layout_marginLeft="10dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/view_green"
            android:text="Choose event" />
        <Button
            android:id="@+id/btnReserve"
            android:layout_width="380dp"
            android:layout_marginLeft="10dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/view_green"
            android:text="Reserve" />
    </LinearLayout>

</ScrollView>
</ScrollView>