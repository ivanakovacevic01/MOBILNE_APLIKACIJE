<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:orientation="horizontal"
    android:padding="5dp"
    android:id="@+id/product_package_item"
    android:background="@drawable/border_card"

    >
    <ImageView
        android:id="@+id/product_package_image"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/foto_book"
        android:contentDescription="@string/photo_album"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            >
            <TextView
                android:background="@color/light_green"
                android:id="@+id/product_package_title"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:text="@string/photo_album"
                android:textStyle="bold"/>
            <CheckBox
                android:background="@color/light_green"
                android:id="@+id/checkboxProduct"
                android:layout_width="70dp"
                android:layout_height="match_parent"></CheckBox>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <TextView
                android:textSize="9sp"
                android:textStyle="bold"
                android:id="@+id/product_pacakge_category"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                />

            <TextView
                android:textSize="10sp"
                android:textStyle="bold"
                android:id="@+id/product_package_price"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                />

        </LinearLayout>





    </LinearLayout>

</LinearLayout>