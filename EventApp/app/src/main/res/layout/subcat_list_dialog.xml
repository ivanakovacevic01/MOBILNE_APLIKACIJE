<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:isScrollContainer="true">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="400dp"
            tools:listitem="@layout/subcategory_item_card"
            android:id="@+id/list_subcat"
            android:layout_margin="5dp"
            android:choiceMode="singleChoice"
            android:listSelector="@color/view_green"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="20dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/back"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="10dp"
                android:id="@+id/button_back_subcat"
                android:backgroundTint="@color/view_green"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:id="@+id/button_add_subcat"
                android:backgroundTint="@color/view_green"/>
        </RelativeLayout>
    </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>