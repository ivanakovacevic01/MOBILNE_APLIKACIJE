<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal"
    android:padding="5dp"
    android:id="@+id/product_card_for_package_item"
    android:background="@drawable/border_card"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            >
        <TextView
            android:background="@color/light_green"
            android:id="@+id/productP_title"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:text="@string/photo_album"
            android:textStyle="bold"/>

            <Button
                android:id="@+id/btnDelete"
                android:backgroundTint="@color/light_green"
                android:background="@drawable/ic_delete"
                android:gravity="center"
                android:layout_marginTop="2dp"
                android:layout_width="40dp"
                android:layout_height="match_parent"></Button>
            <Button
                android:id="@+id/btnReserve"
                android:backgroundTint="@color/view_light_green"
                android:text="Choose"
                android:gravity="center"
                android:textSize="9dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="210dp"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <TextView
                android:textStyle="bold"
                android:id="@+id/productP_category"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:gravity="center"
                />

            <TextView
                android:textStyle="bold"
                android:id="@+id/productP_price"
                android:layout_width="20dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:gravity="center"
                />

        </LinearLayout>





    </LinearLayout>

</LinearLayout>