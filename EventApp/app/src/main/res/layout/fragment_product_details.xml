<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_background"
    tools:context=".fragments.products.ProductDetails">

   <LinearLayout
       android:background="@color/page_background"

       android:layout_margin="2dp"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"
       >
       <TextView
           android:textColor="@color/view_green"
           android:layout_marginBottom="15dp"
           android:id="@+id/textView"
           android:layout_width="match_parent"
           android:layout_height="60dp"
           android:text="Product information"
           android:gravity="center"
           android:textStyle="bold"
           android:textSize="30dp"
           />
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="40dp"
           android:orientation="horizontal"
           >
           <TextView
               android:layout_width="90dp"
               android:layout_height="60dp"
               android:layout_marginLeft="10dp"
               android:text="Name"
               android:textStyle="bold" />

           <TextView
               android:id="@+id/nameDetail"
               android:layout_width="match_parent"
               android:layout_height="50dp"
               android:layout_marginStart="10dp"
               android:layout_marginEnd="10dp"
               >
           </TextView>

       </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="70dp"
           android:orientation="horizontal"
           >
           <TextView
               android:layout_width="90dp"
               android:layout_height="40dp"
               android:layout_marginLeft="10dp"
               android:text="Description"
               android:textStyle="bold" />

           <TextView
               android:id="@+id/descriptionDetail"
               android:layout_width="match_parent"
               android:layout_height="70dp"
               android:layout_marginStart="10dp"
               android:layout_marginEnd="10dp"
               >
           </TextView>

       </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="40dp"
           android:orientation="horizontal"
           >
           <TextView
               android:layout_width="90dp"
               android:layout_height="40dp"
               android:layout_marginLeft="10dp"
               android:text="Category"
               android:textStyle="bold" />

           <TextView
               android:id="@+id/categoryDetail"
               android:layout_width="match_parent"
               android:layout_height="40dp"
               android:layout_marginStart="10dp"
               android:layout_marginEnd="10dp"
               >
           </TextView>

       </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="40dp"
           android:orientation="horizontal"
           >
           <TextView
               android:layout_width="90dp"
               android:layout_height="40dp"
               android:layout_marginLeft="10dp"
               android:text="Subcategory"
               android:textStyle="bold" />

           <TextView
               android:id="@+id/subcategoryDetail"
               android:layout_width="match_parent"
               android:layout_height="40dp"
               android:layout_marginStart="10dp"
               android:layout_marginEnd="10dp"
               >
           </TextView>

       </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="40dp"
           android:orientation="horizontal"
           >
           <TextView
               android:layout_width="90dp"
               android:layout_height="40dp"
               android:layout_marginLeft="10dp"
               android:text="Event type"
               android:textStyle="bold" />

           <TextView
               android:id="@+id/eventDetail"
               android:layout_width="match_parent"
               android:layout_height="40dp"
               android:layout_marginStart="10dp"
               android:layout_marginEnd="10dp"
               >
           </TextView>

       </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="40dp"
           android:orientation="horizontal"
           >
           <TextView
               android:layout_width="90dp"
               android:layout_height="40dp"
               android:layout_marginLeft="10dp"
               android:text="Price"
               android:textStyle="bold" />

           <TextView
               android:id="@+id/priceDetail"
               android:layout_width="match_parent"
               android:layout_height="40dp"
               android:layout_marginStart="10dp"
               android:layout_marginEnd="10dp"
               >
           </TextView>

       </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="40dp"
           android:orientation="horizontal"
           >
           <TextView
               android:layout_width="90dp"
               android:layout_height="40dp"
               android:layout_marginLeft="10dp"
               android:text="Discount"
               android:textStyle="bold" />

           <TextView
               android:id="@+id/discountDetail"
               android:layout_width="match_parent"
               android:layout_height="40dp"
               android:layout_marginStart="10dp"
               android:layout_marginEnd="10dp"
               >
           </TextView>

       </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="40dp"
           android:orientation="horizontal"
           >
           <TextView
               android:layout_width="90dp"
               android:layout_height="40dp"
               android:layout_marginLeft="10dp"
               android:text="Discount price"
               android:textStyle="bold" />

           <TextView
               android:id="@+id/discountPriceDetail"
               android:layout_width="match_parent"
               android:layout_height="40dp"
               android:layout_marginStart="10dp"
               android:layout_marginEnd="10dp"
               >
           </TextView>

       </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="40dp"
           android:orientation="horizontal"
           >
           <TextView
               android:layout_width="90dp"
               android:layout_height="40dp"
               android:layout_marginLeft="10dp"
               android:text="Available"
               android:textStyle="bold" />

           <TextView
               android:id="@+id/availableDetail"
               android:layout_width="50dp"
               android:layout_height="40dp"
               android:layout_marginStart="10dp"
               android:layout_marginEnd="10dp"
               >

           </TextView>
           <TextView
               android:layout_width="70dp"
               android:layout_height="40dp"
               android:layout_marginLeft="10dp"
               android:text="Visible"
               android:textStyle="bold" />

           <TextView
               android:id="@+id/visibleDetail"
               android:layout_width="match_parent"
               android:layout_height="40dp"
               android:layout_marginStart="10dp"
               android:layout_marginEnd="10dp"
               >
           </TextView>

       </LinearLayout>

       <HorizontalScrollView

           android:id="@+id/pupImages"
           android:layout_width="match_parent"
           android:layout_height="120dp"
           android:scaleType="fitXY"

           >

           <LinearLayout
               android:id="@+id/photoLinearLayout"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="horizontal">

               <!-- Ovdje će se dinamički dodati slike -->

           </LinearLayout>
       </HorizontalScrollView>
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_marginStart="10dp"
           android:layout_marginEnd="10dp"
           >
           <Button
               android:backgroundTint="@color/view_green"
               android:id="@+id/btnEdit"
               android:layout_width="150dp"
               android:layout_height="50dp"
               android:layout_alignParentLeft="true"
               android:text="Edit"/>

           <Button
               android:id="@+id/btnDelete"
               android:layout_width="150dp"
               android:layout_height="50dp"
               android:layout_alignParentRight="true"
               android:backgroundTint="@color/view_green"
               android:text="Delete" />

       </RelativeLayout>
       <Button
           android:id="@+id/btnCompanyInfo"
           android:layout_width="380dp"
           android:layout_marginLeft="10dp"
           android:layout_height="50dp"
           android:backgroundTint="@color/view_green"
           android:text="@string/company_info" />
       <Button
           android:id="@+id/btnReserve"
           android:layout_width="380dp"
           android:layout_marginLeft="10dp"
           android:layout_height="50dp"
           android:backgroundTint="@color/view_green"
           android:text="Reserve" />
       <Button
           android:id="@+id/btnMessage"
           android:layout_width="380dp"
           android:layout_marginLeft="10dp"
           android:layout_height="50dp"
           android:backgroundTint="@color/view_green"
           android:text="@string/send_message"/>

       <Button
           android:id="@+id/btnFavourite"
           android:layout_width="380dp"
           android:layout_marginLeft="10dp"
           android:layout_height="50dp"
           android:backgroundTint="@color/view_green"
           android:text="@string/add_to_favourites"/>
   </LinearLayout>

</ScrollView>