<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.eventOrganizer.EventFormFragment"
    android:id="@+id/event_form_id"
    android:background="@color/page_background">

    <LinearLayout
        android:id="@+id/event_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="10dp">

        <TextView
            android:id="@+id/textViewTitle"
            style="@style/TitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/create_event"
            android:textColor="@color/view_green"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/choose_type"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"/>

            <Spinner
                android:id="@+id/spinner_type"
                android:layout_width="200dp"
                android:layout_height="41dp"
                android:layout_alignParentRight="true"
                android:spinnerMode="dropdown"/>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/choose_cat"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"/>
        <Button
            android:id="@+id/spinner_category"
            android:layout_width="200dp"
            android:layout_height="41dp"
            android:layout_alignParentRight="true"
            android:text="@string/suggested"
            android:backgroundTint="@color/view_green"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/choose_subcat"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"/>
        <Button
            android:id="@+id/spinner_subcategory"
            android:layout_width="200dp"
            android:layout_height="41dp"
            android:layout_alignParentRight="true"
            android:text="@string/suggested"
            android:backgroundTint="@color/view_green"/>
        </RelativeLayout>

        <EditText
            android:id="@+id/editTextName"
            style="@style/Widget.AppCompat.EditText"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:hint="@string/name"
            android:inputType="text"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"/>


        <EditText
            android:id="@+id/editTextTextMultiLine"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:hint="@string/description"
            android:inputType="textMultiLine"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp" />

        <EditText
            android:id="@+id/editTextNumberSigned"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:hint="@string/maxNumberOfParticipants"
            android:inputType="numberSigned"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"/>

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="197dp"
            android:layout_height="52dp"
            android:text="@string/is_event_private"
            android:textSize="15dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"/>


        <Button
            android:id="@+id/button_budgeting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/manage_budgeting"
            android:backgroundTint="@color/view_green"
            android:visibility="gone"
            />

        <Button
            android:id="@+id/button_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="15dp"
            android:text="@string/next"
            tools:layout_editor_absoluteX="280dp"
            tools:layout_editor_absoluteY="633dp"
            android:backgroundTint="@color/view_green"
            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>