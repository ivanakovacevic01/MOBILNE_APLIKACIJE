<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:backgroundTint="@color/page_background"

    >

    <TextView
        android:textColor="@color/view_green"
        android:textSize="25dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="Subcategory suggestion"
        android:textStyle="bold"
        android:gravity="center"
        >

    </TextView>
    <LinearLayout
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:text="Name"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/subcatName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            >
        </EditText>

    </LinearLayout>
    <LinearLayout
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:text="Description"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/subcatDescription"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            >
        </EditText>

    </LinearLayout>

    <Button
        android:id="@+id/submitSubcat"
        android:backgroundTint="@color/view_green"
        android:text="Submit"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">

    </Button>
</LinearLayout>