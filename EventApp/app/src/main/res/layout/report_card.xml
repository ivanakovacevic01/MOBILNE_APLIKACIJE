<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:orientation="vertical"
    android:padding="5dp"
    android:id="@+id/report_item"
    android:background="@drawable/border_background"
    >
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="20dp">
        <TextView
            android:textAlignment="center"
            android:textColor="@color/view_green"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:text="WHO REPORTED">
        </TextView>
        <TextView
            android:textAlignment="center"

            android:textColor="@color/view_green"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:text="WHO IS REPORTED">
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <LinearLayout
            android:layout_margin="5dp"
            android:background="@drawable/border_card"
            android:backgroundTint="@color/light_blue"
            android:orientation="vertical"
            android:id="@+id/reporter"
            android:layout_width="180dp"
            android:layout_height="80dp">
            <TextView
                android:backgroundTint="@color/light_green"
                android:id="@+id/reporter_name"
                android:layout_width="match_parent"
                android:layout_height="40dp">
            </TextView>
            <TextView
                android:backgroundTint="@color/light_blue"
                android:id="@+id/reporter_email"
                android:layout_width="match_parent"
                android:layout_height="40dp">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_margin="5dp"
            android:background="@drawable/border_card"
            android:backgroundTint="@color/lightGray"
            android:orientation="vertical"
            android:id="@+id/reported"
            android:layout_width="180dp"
            android:layout_height="80dp">
            <TextView
                android:backgroundTint="@color/lightGray"
                android:id="@+id/reported_name"
                android:layout_width="match_parent"
                android:layout_height="40dp">
            </TextView>
            <TextView
                android:backgroundTint="@color/lightGray"
                android:id="@+id/reported_email"
                android:layout_width="match_parent"
                android:layout_height="40dp">
            </TextView>
        </LinearLayout>
    </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal">
        <TextView
            android:textStyle="italic"
            android:layout_margin="15dp"
            android:id="@+id/report_reason"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <Button
            android:backgroundTint="@color/view_green"
            android:id="@+id/acceptReport"
            android:layout_marginLeft="10dp"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="ACCEPT">
        </Button>

        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            />

        <Button
            android:layout_marginLeft="10dp"
            android:id="@+id/rejectReport"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:backgroundTint="@color/view_green"
            android:text="REJECT" />
        <TextView
            android:layout_marginLeft="3dp"
            android:id="@+id/report_date"
            android:layout_width="150dp"
            android:layout_height="30dp">
        </TextView>
    </LinearLayout>


</LinearLayout>