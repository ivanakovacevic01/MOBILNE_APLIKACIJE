<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:orientation="horizontal"
    android:background="@drawable/border_background"
    android:padding="10dp"
    android:layout_marginVertical="10dp"
    android:id="@+id/service_card_item"
    android:clickable="true">
    <RelativeLayout
        android:layout_width="140dp"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/service_image"
            android:layout_width="140dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/foto_book"
            android:contentDescription="@string/photo_album"/>

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_heart"
            android:background="@null"
            android:visibility="gone"
            android:id="@+id/heart_service"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:background="@color/light_green"
            android:id="@+id/service_title"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:text="@string/photo_album"
            android:textSize="22sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/service_description"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_margin="5dp"
            android:text="@string/photo_album"
            android:textSize="14sp"
            android:textStyle="italic"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/service_category"
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:gravity="center"/>


            <TextView
                android:id="@+id/service_available"
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:gravity="center"/>
        </LinearLayout>


        <TextView
            android:textSize="20sp"
            android:textStyle="bold"
            android:id="@+id/service_price"
            android:layout_width="150dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:gravity="center"
            />

    </LinearLayout>
</LinearLayout>