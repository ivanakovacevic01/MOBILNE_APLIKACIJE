<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_background"

    tools:context=".fragments.NotificationsPage">

    <LinearLayout
        android:background="@color/page_background"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="1">

            <Button
                android:backgroundTint="@color/view_green"
                android:id="@+id/onALL"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="0.33"
                android:layout_marginEnd="8dp"
                android:text="ALL" />

            <Button
                android:backgroundTint="@color/view_green"
                android:id="@+id/onNEW"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="0.33"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:text="NEW" />

            <Button
                android:backgroundTint="@color/view_green"
                android:id="@+id/onSEEN"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="0.33"
                android:layout_marginStart="8dp"
                android:text="SEEN" />

        </LinearLayout>

        <TextView
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:id="@+id/notifications_type"
            android:textColor="@color/view_green"
            android:layout_width="match_parent"
            android:layout_height="50dp"></TextView>
        <RelativeLayout
            android:background="@color/page_background"
            android:layout_width="match_parent"
            android:layout_height="600dp"
            android:layout_margin="10dp"
            android:id="@+id/scroll_notifications_list"
            />
    </LinearLayout>


</FrameLayout>